<div class="modal" tabindex="-1" role="dialog" id="paymentModal" data-backdrop="static">
  <div class="modal-dialog modalpayment" role="document" >
    <div class="modal-content modalpayment-content">
<!--      <button type="button" class="modal-back close" id="paymentGoBack" aria-label="Go Back" style="top: -71px;left: -8px;">←<span aria-hidden="true"> Go back</span></button>-->
      <button type="button" class="modal-back close" id="paymentGoBack" aria-label="Go Back" style="top: 13px;left: 21px;">←<span aria-hidden="true"> Go back</span></button>
      <div class="modal-header modalpayment-header">
        <h3 class="modal-title modalpayment-title">Add a Card</h3>
      </div>
      <div class="modal-body modalpayment-body">
        <form class="needs-validation paymentform" id="payment-form" novalidate>
          <div class="modal-section">
            <div class="modalpayment-subtitle">
              Visa, Mastercard and American Express are accepted payment methods. If you'd like to pay via direct deposit, please click <a href="#" id="skipOrder" style="color: #5951ff">here</a>
            </div>
          </div>
          <div class="form-group col-md-12">
            <label for="inputPassword4">Name on Card</label>
            <div id="cc-payment-name">
              <input type="text" class="form-control" placeholder="Name on Card" required>
              <div class="invalid-feedback">
                Cannot be blank.
              </div>
            </div>
          </div>
          <div class="form-group col-md-12">
            <label for="card-element">
              Credit or Debit card
            </label>
            <div id="card-element">
              <!-- A Stripe Element will be inserted here. -->
            </div>
            <div id="card-errors" role="alert"></div>
          </div>
        </form>
      </div>
      <div class="modal-footer modalpayment-footer">
        <div class="btn-group-justified btn-group-vertical modalpayment-button_group">
          <button type="submit" id="paymentSubmit" class="btn btn-primary modalpayment-button_signup" data-persist="date">Add Card</button>
        </div>
      </div>
      <div id="hiddenField" data-restaurant-id="" data-dish-id="" style="visibility: hidden"></div>
    </div>
  </div>
</div>
