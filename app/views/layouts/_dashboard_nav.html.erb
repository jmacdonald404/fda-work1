<div class="container" style="padding:8px">
  <nav class="navbar justify-content-between dashboardnav" style="height:73px">
    <%= link_to(image_tag("001logo.png", class: "navbar-brand navbar-w2p", width: "70", height:"50", :alt => "Deliveryapp Logo", :data => {'turbolinks-action' => 'replace'}), dashboard_path) %>
    <ul class="navbar padb-0 mb-0" style="margin-right: 76px;margin-top: -12px;">
      <% if current_user %>
      <div class="dropdown show">
        <div class="dropdown-group">
          <div class="dropdown-user" id="dropdownMenuLink"  aria-haspopup="true" aria-expanded="false">
            <%# image_tag("user_avatar.svg", class: "dashboardnav-usericon", width: "30", height:"30") %>
            <%="Logged in as #{current_user.name}" %>
          </div>
          <div class="dropdown-menu dashboardnav-dropdown" aria-labelledby="dropdownMenuLink">
            <%= link_to "Account", user_path(current_user), :class => 'dropdown-item' %>
            <a href="/orders" id="order_history_link" class="dropdown-item">Order History</a>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, :class => 'dropdown-item'  %>
          </div>
        </div>
      </div>
      <% else %>
        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
          <div class="btn-group mr-4" role="group" aria-label="First group">
            <a href="/signup" class="btn btn-outline-primary brand-button-outline my-2 my-sm-0 signupbtn" id="sign-up" type="submit">Sign Up</a>
          </div>
          <div class="btn-group mr-2" role="group" aria-label="First group">
            <a href="/login" class="btn btn-primary brand-button-primary my-2 my-sm-0 loginbtn" type="submit" id="login">Login</a>
          </div>
        </div>
      <% end %>
    </ul>
  </nav>
</div>